watson_report_day()
{
	DATE=$1

	echo $''

	if [ $DATE ]
	then
		echo "Showing Watson report for date $DATE"
	else
		echo "Showing Watson report for today"
		DATE=$(date +"%Y-%m-%d")
	fi

	echo $''

    watson report -G -f $DATE -t $DATE
}

